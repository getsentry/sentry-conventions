{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sentry Span Attribute Schema",
  "description": "Describes an attribute and how it's meant to be used",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "key": {
      "description": "The name of the attribute, for ex. http.route",
      "type": "string"
    },
    "brief": {
      "description": "A description of the attribute",
      "type": "string"
    },
    "type": {
      "description": "The type of the attribute value",
      "type": "string"
    },
    "pii": {
      "description": "If an attribute can have pii. Is either true, false or maybe. Optionally include a reason about why it has PII or not",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "key": {
          "enum": ["true", "maybe", "false"]
        },
        "reason": {
          "type": "string"
        }
      },
      "required": ["key"]
    },
    "is_in_otel": {
      "type": "boolean"
    },
    "requirement_level": {
      "description": "If an attribute is required, conditionally required, recommended, or opt-in",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "key": {
              "enum": ["required", "recommended", "opt-in"]
            },
            "reason": {
              "type": "string"
            }
          },
          "required": ["key"]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "key": {
              "const": "conditionally_required"
            },
            "reason": {
              "type": "string"
            }
          },
          "required": ["key", "reason"]
        }
      ]
    },
    "example": {
      "description": "An example value of the attribute",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "boolean"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      ]
    },
    "deprecation": {
      "description": "If an attribute was deprecated, and what it was replaced with",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "replacement": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      },
      "required": ["replacement"]
    },
    "alias": {
      "description": "If there are attributes that alias to this attribute",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["key", "brief", "type", "pii", "is_in_otel"]
}
